{
  "resourceType": "StructureDefinition",
  "id": "care-condition-profile",
  "url": "https://fhir.ohc.network/StructureDefinition/care-condition-profile",
  "version": "0.1.0",
  "name": "CareConditionProfile",
  "title": "Care Condition Profile",
  "status": "draft",
  "experimental": false,
  "date": "2025-01-27",
